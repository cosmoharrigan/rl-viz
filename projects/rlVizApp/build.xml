<project name="RLVizApp" basedir="." >

    <property name="src.dir"     value="src"/>

    <property name="build.dir"   value="build"/>
    <property name="dist.dir"   value="dist"/>
    <property name="classes.dir" value="${build.dir}/classes"/>
	<property name="jar.result" value="${dist.dir}/${ant.project.name}.jar" />

	<property name="privateLib.dir"     value="libs"/>
	<property name="projectLib.dir"     value="../../dist"/>
	
	<path id="application" location="${jar.result}"/>
 	

<path id="classpath">
	<fileset dir="${privateLib.dir}" >
	    <include name="forms-1.1.0.jar"/>
	</fileset>
	<fileset dir="${projectLib.dir}" >
	    <include name="RLVizLib.jar"/>
	    <include name="environmentShell.jar"/>
	    <include name="agentShell.jar"/>
	</fileset>
</path>


    <target name="clean">
 		<delete dir="${build.dir}"/>
 		<delete dir="${dist.dir}"/>
		<delete file="${jar.result}"/>
    </target>

    <target name="compile">
       <mkdir dir="${classes.dir}"/>
        <javac srcdir="${src.dir}" destdir="${classes.dir}" classpathref="classpath" /> 
    </target>

<!-- For Now, we're actually going to put all of the classes from all of the related project into one big jar.
 	NOTE: This is a poor implementation, because we've already specified all of these jars above for the classpath.  
	I'm new to ant and couldn't figure out exactly how to reuse those filesets
-->
    <target name="jar" depends="compile" >
		<unjar dest="${classes.dir}">
			<fileset dir="${privateLib.dir}" >
			    <include name="forms-1.1.0.jar"/>
			</fileset>
			<fileset dir="${projectLib.dir}" >
			    <include name="RLVizLib.jar"/>
			    <include name="environmentShell.jar"/>
			    <include name="agentShell.jar"/>
			</fileset>
		</unjar>

        <mkdir dir="${dist.dir}" />
        <jar destfile="${jar.result}" basedir="${classes.dir}" >
            <manifest>
            </manifest>
        </jar>
        <copy file="${jar.result}" todir="../../dist/" />
    </target>

   <target name="clean-build" depends="clean,jar"/>

<target name="junit" depends="jar">
     <junit printsummary="yes"  >
         <classpath>
              <path refid="application"/>
			  <path refid="classpath"/>
          </classpath>

         <batchtest fork="yes">
             <fileset dir="${src.dir}" includes="**/*Test.java"/>
         </batchtest>
     </junit>
 </target>


</project>

